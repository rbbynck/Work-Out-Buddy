<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_3"
    tools:context=".Activity_Exercise_Personalize">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/exercise_personalize_plan_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00CCCCCC" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/exercise_personalize_plan_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PERSONALIZE SETS"
                    android:textColor="@color/black_primary"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/exercise_personalize_plan_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="right|center_vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/exercise_personalize_plan_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_round_addbutton"
            android:src="@drawable/ic_add_black_24dp" />
    </LinearLayout>
</RelativeLayout>